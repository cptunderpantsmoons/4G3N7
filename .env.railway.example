# Railway Environment Variables Template
# Copy these to your Railway project environment variables

# ===========================================
# ESSENTIAL CONFIGURATION
# ===========================================

# AI Provider Keys (at least one required)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Additional AI Providers
QWEN_API_KEY=your_qwen_api_key_here

# OpenRouter Configuration (supports all latest December 2025 models)
OPENROUTER_API_BASE=https://openrouter.ai/api/v1
OPENROUTER_SITE_URL=
OPENROUTER_APP_NAME=4G3N7

# Qwen Configuration (Alibaba DashScope)
QWEN_API_BASE=https://dashscope.aliyuncs.com/compatible-mode/v1

# ===========================================
# OPTIONAL CONFIGURATION
# ===========================================

# File Storage (defaults to local storage)
FILE_STORAGE_PROVIDER=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
FILE_STORAGE_BUCKET=4g3n7-files
MINIO_ENDPOINT=

# Database Configuration (Railway auto-sets DATABASE_URL)
# DATABASE_URL will be set automatically by Railway
DATABASE_MAX_CONNECTIONS=20
DATABASE_HEALTH_CHECK_INTERVAL=30000
DATABASE_FAILOVER_TIMEOUT=5000

# Database Replication (for scaling)
DATABASE_REPLICA_URLS=

# File Migration Settings
MIGRATION_BATCH_SIZE=50
MIGRATION_MAX_RETRIES=3
CLEAR_BASE64_AFTER_MIGRATION=false

# Service URLs (auto-configured in Railway)
G3N7_DESKTOP_BASE_URL=http://4g3n7-desktop:9990
G3N7_AGENT_BASE_URL=http://4g3n7-agent:9991
G3N7_DESKTOP_VNC_URL=http://4g3n7-desktop:9990/websockify

# ===========================================
# PRODUCTION TUNING
# ===========================================

# Enable additional monitoring and logging in production
LOG_LEVEL=info
PERFORMANCE_MONITORING=true
HEALTH_CHECK_INTERVAL=30

# Enable file storage features
ENABLE_FILE_STORAGE_MIGRATION=false
ENABLE_OBJECT_STORAGE=false

# Enable database replication (if replicas are configured)
ENABLE_DATABASE_REPLICATION=false