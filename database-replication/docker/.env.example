# PostgreSQL Configuration
POSTGRES_DB=4g3n7db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_REPLICATION_USER=replicator
POSTGRES_REPLICATION_PASSWORD=changeme_strong_password_here

# Port Configuration
PRIMARY_PORT=5432
REPLICA_1_PORT=5433
REPLICA_2_PORT=5434
PGBOUNCER_PRIMARY_PORT=6432
PGBOUNCER_REPLICA_PORT=6433

# Health Monitoring
HEALTH_CHECK_INTERVAL=30
MAX_REPLICATION_LAG=10
MAX_RESPONSE_TIME=5000
FAILOVER_ENABLED=true

# Failover Configuration (USE WITH CAUTION)
AUTO_FAILOVER=false  # Disabled by default for safety
ALERT_WEBHOOK=

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Application Connection URLs (for your 4G3N7 application)
# Primary (for writes)
DATABASE_PRIMARY_URL=postgresql://postgres:postgres@localhost:5432/4g3n7db

# Replica (for reads - with load balancing)
DATABASE_REPLICA_URLS=postgresql://postgres:postgres@localhost:5433/4g3n7db,postgresql://postgres:postgres@localhost:5434/4g3n7db

# PgBouncer URLs (recommended for production)
DATABASE_PRIMARY_POOLER_URL=postgresql://postgres:postgres@localhost:6432/4g3n7db
DATABASE_REPLICA_POOLER_URL=postgresql://postgres:postgres@localhost:6433/4g3n7db

# Environment-specific settings
NODE_ENV=production

# SSL Configuration (optional)
# DATABASE_SSL_MODE=require