# 4G3N7 Structured Logging Configuration
# Copy this file to .env and customize for your environment

# Log level (trace, debug, info, warn, error, critical)
LOG_LEVEL=info

# Maximum number of logs to keep in memory
MAX_LOGS_IN_MEMORY=50000

# Enable console interception (replaces console.log/warn/error)
ENABLE_CONSOLE_INTERCEPTION=true

# Enable external logging service integration
ENABLE_EXTERNAL_LOGGING=false

# External logging service configuration
# ELASTICSEARCH_URL=http://localhost:9200
# LOGSTASH_HOST=localhost
# LOGSTASH_PORT=5000
# DATADOG_API_KEY=your_datadog_key
# SPLUNK_HEC_TOKEN=your_splunk_token
# SPLUNK_HEC_URL=https://splunk-instance:8088/services/collector

# Custom service name for logs
SERVICE_NAME=4g3n7-agent

# Log format for structured output (json, pretty)
LOG_FORMAT=json

# Enable request/response logging
ENABLE_HTTP_LOGGING=true

# Enable slow query logging threshold (milliseconds)
SLOW_QUERY_THRESHOLD=1000

# Enable performance logging
ENABLE_PERFORMANCE_LOGGING=true

# Performance logging threshold (milliseconds)
PERFORMANCE_THRESHOLD=1000

# Log retention settings (days)
LOG_RETENTION_DAYS=30

# Enable log rotation
ENABLE_LOG_ROTATION=true

# Log file settings (if logging to file)
LOG_FILE_PATH=./logs/app.log
LOG_MAX_FILE_SIZE=100MB
LOG_MAX_FILES=10