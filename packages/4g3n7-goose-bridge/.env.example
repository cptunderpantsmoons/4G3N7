# Goose Bridge Environment Configuration

# Application
NODE_ENV=production
PORT=9992

# Extension Configuration
GOOSE_EXTENSION_PATH=./config/extensions
GOOSE_BRIDGE_ENABLED=true

# Redis Configuration (Task Queue & Cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Security
API_KEY_SALT=change-this-in-production
JWT_SECRET=change-this-in-production
ENABLE_API_KEY_AUTH=true

# Resource Limits (Default)
DEFAULT_MAX_CONCURRENT_TASKS=10
DEFAULT_MAX_MEMORY=536870912  # 512MB
DEFAULT_MAX_CPU=80  # 80%
DEFAULT_TIMEOUT=300000  # 5 minutes

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_AUDIT_LOGGING=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9093

# CORS
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH

# Rate Limiting
RATE_LIMIT_WINDOW=60000  # 1 minute
RATE_LIMIT_MAX_REQUESTS=100

# Health Check
HEALTH_CHECK_INTERVAL=30000  # 30 seconds

# Extension Auto-load
AUTO_LOAD_BUILTIN_EXTENSIONS=true
